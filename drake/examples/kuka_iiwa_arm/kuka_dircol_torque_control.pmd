group "0.sim" {

  cmd "0.kuka_simulation" {
    exec = "build/drake/examples/kuka_iiwa_arm/kuka_simulation";
    host = "localhost";
  }

  cmd "1.kuka_plan_runner" {
    exec = "build/drake/examples/kuka_iiwa_arm/kuka_plan_runner";
    host = "localhost";
  }

  cmd "2.kuka_control" {
    exec = "build/drake/examples/kuka_iiwa_arm/kuka_control";
    host = "localhost";
  }

  cmd "3.state_lcm_translator" {
    exec = "DRC_BASE=/none build/install/bin/directorPython drake/examples/kuka_iiwa_arm/kuka_iiwa_state_translator.py --director_config drake/examples/kuka_iiwa_arm/director_config.json";
    host = "localhost";
  }
}

group "1.tools" {

  cmd "0.drake-visualizer" {
    exec = "build/install/bin/drake-visualizer";
    host = "localhost";
  }


  cmd "1.director-ik-app" {
    exec = "DRC_BASE=/none build/install/bin/directorPython drake/examples/kuka_iiwa_arm/director_ik_app.py --director_config drake/examples/kuka_iiwa_arm/director_config.json";
    host = "localhost";
  }

  cmd "2.Robotiq_initializer" {
    exec = "python ../robotiq-driver/CModelRtuNode.py /dev/ttyUSB0";
    host = "localhost";
  }

  cmd "3.signal-scope" {
    exec = "build/install/bin/signal-scope drake/examples/kuka_iiwa_arm/kuka_iiwa_signal_scope.py";
    host = "localhost";
  }
}

group "2.kuka-dircol-planner" {
    cmd "1.director_generic_planner_app" {
        exec = "DRC_BASE=/none build/install/bin/directorPython drake/examples/kuka_iiwa_arm/director_generic_planner_app.py --director_config drake/examples/kuka_iiwa_arm/director_config.json";
        host = "localhost";
    }
    cmd "2.kuka_dircol_planner" {
        exec = "build/drake/examples/kuka_iiwa_arm/run_kuka_dircol_planner";
        host = "localhost";
    }
}